<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.TextToSpeech" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAnimationStyle">@style/customActivityAnimation</item>
    </style>

    <style name="customActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fadein_transition</item>
        <item name="android:activityOpenExitAnimation">@anim/fadeout_transition</item>
        <item name="android:activityCloseEnterAnimation">@anim/fadein_transition</item>
        <item name="android:activityCloseExitAnimation">@anim/fadeout_transition</item>
    </style>

    <style name="customDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slidein_bottom</item>
        <item name="android:windowExitAnimation">@anim/slideout_bottom</item>
    </style>
</resources>